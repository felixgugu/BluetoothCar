<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/image"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button_up"
        android:layout_toLeftOf="@+id/button_left"
        android:layout_toStartOf="@+id/button_left"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <Button
        android:id="@+id/button_up"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:text="MOVE"
        android:background="@drawable/vote_up_down"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_left"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="LEFT"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/button_right"
        android:layout_toStartOf="@+id/button_right"
        android:background="@drawable/control_left_right"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button_right"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="RIGHT"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/control_left_right"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button_stop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="STOP"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button_left"
        android:layout_toEndOf="@+id/button_left"
        android:textSize="20dp"
        android:layout_below="@+id/button_up" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/moto_speed"
        android:hint="馬達速度"
        android:inputType="number"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button_up"
        android:layout_alignEnd="@+id/button_up"
        android:text="200" />


</RelativeLayout>
