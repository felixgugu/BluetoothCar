<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/v">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_up"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:background="@drawable/image_up_down"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:id="@+id/button_left"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="LEFT"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/button_right"
        android:layout_toStartOf="@+id/button_right"
        android:background="@drawable/control_left_right"
        android:textSize="20dp"
        android:textColor="@color/left_right" />

    <Button
        android:id="@+id/button_right"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="RIGHT"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/control_left_right"
        android:textSize="20dp"
        android:textColor="@color/left_right"
        android:layout_marginRight="15dp" />

    <Button
        android:id="@+id/button_stop"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="STOP"
        android:textSize="20dp"
        android:background="@drawable/control_stop"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/button_right" />

    <ImageButton
        android:id="@+id/button_bluetooth"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_bluetooth_off"
        android:background="#00ffffff"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button_camera" />

    <ImageButton
        android:id="@+id/button_camera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_camera_off"
        android:background="#00ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_menu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="â—Ž"
        android:textSize="20dp"
        android:background="@drawable/control_exit"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/button_right"
        android:textColor="#000000"
        android:layout_margin="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/text_message"
        android:text="message"
        android:textColor="#ffffff"
        android:background="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp" />


</RelativeLayout>
